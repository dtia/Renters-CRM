<script>
 $(document).ready(function(){
   
   $("#newlisting").validate({
     rules: {
		beds: "required",
		baths: "required",
		street: "required",
		city: "required",
		state: "required",
		price: "required",
     }
   });
 });
</script>

<html>
  <body>
	<div class="container">
		<%= form_tag(property_index_url, :method => "post", :name => "new_property", :id => "newlisting") do %>
			<%= label_tag(:beds, "Beds") %>
		    <%= text_field_tag(:beds) %>
		    <%= label_tag(:baths, "Baths") %>
		    <%= text_field_tag(:baths) %>
			<%= label_tag(:street, "Street") %>
			<%= text_field_tag(:street) %>
			<%= label_tag(:unit, "Unit") %>
			<%= text_field_tag(:unit) %>
			<%= label_tag(:city, "City") %>
			<%= text_field_tag(:city) %>
			<%= label_tag(:state, "State") %>
			<%= text_field_tag(:state) %>
			<%= label_tag(:zip, "Zip") %>
			<%= text_field_tag(:zip) %>
			<%= label_tag(:avail_date, "Date Available") %>
			<%= text_field_tag(:avail_date) %>
			<%= label_tag(:price, "Rate") %>
			<%= text_field_tag(:price) %>
			<%= label_tag(:deposit, "Deposit") %>
			<%= text_field_tag(:deposit) %>
			<%= label_tag(:parking, "Has Parking") %>
			<%= select_tag(:parking, options_for_select([["Yes", 1], ["No", 0]], 1)) %>
			<br>
		<%= submit_tag("Create Listing") %>
		<% end %>
	</div>
  </body>
	
</html>
