<div class="container">
	<h2>Sign up</h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div><%= f.label :email %><br />
	  <%= f.email_field :email %></div>
	
	  <div><%= f.label "First Name" %><br/>
	  <%= f.text_field :firstname %></div>
	
	  <div><%= f.label "Last Name" %><br/>
	  <%= f.text_field :lastname %></div>
	
	  <div><%= f.label "Phone Number" %><br/>
	  <%= f.text_field :phone %></div>
	
	  <div><%= f.label "Social Security Number" %><br/>
	  <%= f.text_field :ssn %></div>
	
	  <div><%= f.label :password %><br />
	  <%= f.password_field :password %></div>

	  <div><%= f.label :password_confirmation %><br />
	  <%= f.password_field :password_confirmation %></div>

	  <div><%= f.submit "Sign up" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>